<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-127dp"
    tools:context=".Sedan">

    <!-- Linear layout to hold the list of cars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Car 1 -->
        <FrameLayout
            android:id="@+id/car_swift_dzire"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:background="#A5B180"
            tools:ignore="InvalidId">

            <!-- Car image -->
            <ImageView
                android:id="@+id/swift"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/swift_dzire"/>

            <!-- Car details overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="180dp"
                android:padding="16dp"
                >

                <!-- Car name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_swift_dzire"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Car features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage: 23.20km/L, Seats: 5, Fuel: Petrol"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>

                <!-- Rent price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@integer/swift_dzire_price"
                        android:drawableLeft="@drawable/baseline_currency_rupee_24"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="/hour"
                        />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Car 2 -->
        <FrameLayout
            android:id="@+id/car_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:background="#A5B180"
            android:clickable="true"
            tools:ignore="InvalidId">

            <!-- Car image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/honda_city"/>
            <!-- Car details overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="180dp"
                android:gravity="bottom|start"
                android:padding="16dp">

                <!-- Car name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_city"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Car features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage: 17.8km/L, Seats: 5, Fuel: Petrol"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>

                <!-- Rent price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@integer/city_price"
                        android:drawableLeft="@drawable/baseline_currency_rupee_24"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="/hour"
                        />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Car 3 -->

        <FrameLayout
            android:id="@+id/car_verna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="#A5B180"
            tools:ignore="InvalidId">

            <!-- Car image -->
            <ImageView
                android:id="@+id/kwid"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/verna"/>

            <!-- Car details overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="180dp"
                android:padding="16dp"
                >

                <!-- Car name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_verna"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Car features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage: 17.7km/L, Seats: 5, Fuel: Petrol"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>

                <!-- Rent price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@integer/verna_price"
                        android:drawableLeft="@drawable/baseline_currency_rupee_24"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="/hour"
                        />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- car 4 -->
        <FrameLayout
            android:id="@+id/car_rapid"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:background="#A5B180"
            tools:ignore="InvalidId">

            <!-- Car image -->
            <ImageView
                android:id="@+id/alto_k10"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/skoda_rapid"/>

            <!-- Car details overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="180dp"
                android:padding="16dp"
                >

                <!-- Car name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_rapid"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Car features -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mileage: 15.4km/L, Seats: 5, Fuel: Petrol"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>

                <!-- Rent price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@integer/rapid_price"
                        android:drawableLeft="@drawable/baseline_currency_rupee_24"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:text="/hour"
                        />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
        <!-- Add more car items as needed -->

    </LinearLayout>
</ScrollView>